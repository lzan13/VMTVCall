<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="100"
    android:exitFadeDuration="100">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/vm_round_radius_normal"/>
            <solid android:color="@color/vm_green_54"/>
        </shape>
    </item>
    <!--获取焦点-->
    <item android:state_focused="true">
        <shape>
            <corners android:radius="@dimen/vm_round_radius_normal"/>
            <solid android:color="@color/vm_green_87"/>
        </shape>
    </item>
    <item android:state_activated="true">
        <shape android:dither="true"
            android:shape="oval">
            <solid android:color="@color/vm_green"/>
        </shape>
    </item>
    <item>
        <shape android:dither="true"
            android:shape="oval">
            <solid android:color="@color/vm_white_12"/>
        </shape>
    </item>
</selector>